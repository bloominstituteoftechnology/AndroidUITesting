            android:text="No unit"
            android:textAllCaps="false"
            android:id="@+id/buttonUnitConverted"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
