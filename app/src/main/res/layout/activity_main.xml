<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:background="@android:drawable/spinner_background"
        android:id="@+id/text_output"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:hint="Output"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/button_multiply"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="X"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_output" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/button_divide"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_multiply"
        app:layout_constraintTop_toBottomOf="@id/text_output" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/button_add"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_divide"
        app:layout_constraintTop_toBottomOf="@id/text_output" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/button_subtract"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_add"
        app:layout_constraintTop_toBottomOf="@id/text_output" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_multiply" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintTop_toBottomOf="@id/button_multiply" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_3"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintTop_toBottomOf="@id/button_multiply" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_dot"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="."
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintTop_toBottomOf="@id/button_multiply" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_4"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_1" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_5"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintTop_toBottomOf="@id/button_1" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_6"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintTop_toBottomOf="@id/button_1" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_7"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_4" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_8"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintTop_toBottomOf="@id/button_4" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_9"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintTop_toBottomOf="@id/button_4" />

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/button_0"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintTop_toBottomOf="@id/button_8" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/button_equals"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintTop_toBottomOf="@id/button_dot" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/button_square"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="^2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_8" />

    <Button
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/button_sqrt"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="Sqr Rt"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintTop_toBottomOf="@id/button_8" />

    <Button
        android:backgroundTint="@android:color/holo_purple"
        android:id="@+id/button_back"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="Back"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/button_sqrt"
        app:layout_constraintTop_toBottomOf="@id/button_8" />

    <Button
        android:backgroundTint="@android:color/holo_purple"
        android:textSize="24sp"
        android:text="Clear"
        android:id="@+id/button_clear"
        app:layout_constraintTop_toBottomOf="@id/button_sqrt"
        android:layout_width="match_parent"
        android:layout_height="75dp" />
</android.support.constraint.ConstraintLayout>